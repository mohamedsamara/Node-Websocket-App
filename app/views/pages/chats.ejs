
<a href="chat/add" class="btn-link">Add Chat</a>
<div class="list-group chats">

  <% if(conversations.length > 0){ %>
    <% for(var i=0; i < conversations.length; i++) { %>

      <% for(var j=0; j < conversations[i].length; j++) { %>

       <a href="chat/<%= conversations[i][j].conversationId %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
         <div class="d-flex justify-content-between align-items-center">
          <i class="fa fa-envelope"></i>
          <%= conversations[i][j].body %>
         </div>
       <div class="d-flex justify-content-between align-items-center">
         <i class="fa fa-user"></i>
         <span><%= conversations[i][j].sender.name %></span>
         <i class="fa fa-calendar-alt"></i>
         <strong><%=  moment(conversations[i][j].createdAt).format('MMM-DD-YYYY'); %></strong>
       </div>
       </a>

      <% } %>

    <% } %>

  <% } else{ %>
    <div class="no-data">No chats yet!</div>
  <% } %>

</div>
