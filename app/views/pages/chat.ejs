<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h3 class="text-center mb-3">Reply to this Chat</h3>
        <form action="/chat/reply/<%=conversationId  %>" method="POST">
          <div class="chat-window">
                <% for(var i=0; i < conversations.length; i++) { %>
                      <% if((user._id).toString() == (conversations[i].sender._id).toString()){ %>
                        <div class="message">
                          <label>You</label>
                          <p class="owner">
                            <span><%= conversations[i].body %></span>
                          </p>
                          <strong><%= new Date(conversations[i].createdAt).toLocaleString(); %></strong>
                        </div>
                      <% } else{ %>
                        <div class="message">
                          <label><%= conversations[i].sender.name %></label>
                          <p class="sender">
                            <span><%= conversations[i].body %></span>
                          </p>
                          <strong><%= new Date(conversations[i].createdAt).toLocaleString(); %></strong>
                        </div>
                      <% } %>

                <% } %>
              </div>
              <input type="hidden" id="sender" data-owner="<%= user._id %>">
              <div class="form-group">
                <textarea id="message" name="message" class="form-control" rows="3">Type your message here....</textarea>
              </div>
            <button type="submit" id="chat-submit" class="btn btn-primary btn-submit">
              Reply
            </button>
          </form>
    </div>
  </div>
</div>
